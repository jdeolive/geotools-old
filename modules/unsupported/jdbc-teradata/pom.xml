  <name>Teradata DataStore</name>


  <scm>
    <connection>
      scm:svn:http://svn.osgeo.org/geotools/trunk/modules/plugin/jdbc/jdbc-teradata
    </connection>
    <url>http://svn.osgeo.org/geotools/trunk/modules/plugin/jdbc/jdbc-teradata</url>
  </scm>

  <description>
	DataStore for Teradata Database.
  </description>

  <licenses>
    <license>
      <name>Lesser General Public License (LGPL)</name>
      <url>http://www.gnu.org/copyleft/lesser.txt</url>
      <distribution>repo</distribution>
    </license>
  </licenses>

  <!-- =========================================================== -->
  <!--     Developers and Contributors                             -->
  <!-- =========================================================== -->
  <developers>
    <developer>
      <name>Jesse Eichar</name>
      <id>jeichar</id>
      <email>jesse.eichar@camptocamp.com</email>
      <organization>Camptocamp</organization>
      <roles>
        <role>Module Maintainer</role>
